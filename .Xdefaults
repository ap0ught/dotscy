XTerm*background: black
XTerm*foreground: grey
XTerm*pointerColor: SpringGreen
XTerm*font: -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*
! No really, this should be the standard.
XTerm*metaSendsEscape: true



! Fade out the text when terminal is not focused.
Rxvt.fading: 30

! Nice font, but doesn't have a bold version, therefore disable it...
Rxvt.font: -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*
Rxvt.boldFont:
Rxvt.italicFont:
Rxvt.boldItalicFont:
! ...and enable brighter colors for what's supposed to be bold.
Rxvt.intensityStyles: true

! Tiny scroll bar at the right side.
Rxvt.scrollstyle: plain
Rxvt.scrollBar_right: true
! Don't scroll while in buffer, even on output, except if I press a key.
Rxvt.scrollTtyOutput: false
Rxvt.scrollWithBuffer: false
Rxvt.scrollTtyKeypress: true
! Huge scrollback buffer.
Rxvt.saveLines: 10000

! Make it old-school.
Rxvt.cursorBlink: true

! rxvt-unicode terminfo exists on too few systems.
Rxvt.termName: rxvt

! Open login shells.
Rxvt.loginShell: true

! Sorry Vim, 8th bit meta is just broken.
Rxvt.meta8: false

! Disable Perl extensions for now, I don't actively use them
Rxvt.perl-ext:
Rxvt.perl-ext-common:

! Colors! 
! 0: black, 1: red, 2: green, 3: yellow, 4: blue, 5: magenta, 6: cyan, 7: white
Rxvt.background: #000000
Rxvt.foreground: #999999
Rxvt.cursorColor: SpringGreen
Rxvt.cursorColor2: black
Rxvt.pointerColor: SpringGreen
Rxvt.scrollColor: #8888AA
Rxvt.color0: #000000
Rxvt.color1: #880000
Rxvt.color2: #008800
Rxvt.color3: #888800
Rxvt.color4: #2222FF
Rxvt.color5: #880088
Rxvt.color6: #008888
Rxvt.color7: #999999
Rxvt.color8: #666666
Rxvt.color9: #FF0000
Rxvt.color10: #00FF00
Rxvt.color11: #FFFF00
Rxvt.color12: #8888FF
Rxvt.color13: #FF00FF
Rxvt.color14: #00FFFF
Rxvt.color15: #FFFFFF

